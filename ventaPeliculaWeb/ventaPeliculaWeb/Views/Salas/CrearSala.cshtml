@model SalasModelDto

<form asp-controller="Salas" asp-action="CrearSala">
    <div class="row">

        <h2 class="text-center">crear Pelicula</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="tipo_sala" placeholder="idTipoSala">
        </div>
        <div class="form-group col-md-12 mb-4">

            <input type="text" class="form-control  input-lg" asp-for="id_teatro" placeholder="idTeatro" />

        </div>
        <div class="form-group col-md-12 mb-4">

            <input type="text" class="form-control  input-lg" asp-for="id_movie" placeholder="idMovie"/>
            
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="number" required class="form-control input-lg" asp-for="precioAsiento" placeholder="precioAsiento">
        </div>

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
