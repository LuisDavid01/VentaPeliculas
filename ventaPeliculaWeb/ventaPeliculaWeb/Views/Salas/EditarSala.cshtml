@model SalasModelDto

<form asp-controller="Salas" asp-action="EditarSala">
    <div class="row">

        <h2 class="text-center">editar sala</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>

        <div class="form-group col-md-12 mb-4">
            <select asp-for="tipoSala" required class="form-control input-lg">
                @foreach (var tipoSala in Model.ListaTipo_sala!)
                {
                    <option value="@tipoSala._id">@tipoSala.nombre</option>
                }

            </select>

        </div>

        <div class="form-group col-md-12 mb-4">

            <select asp-for="id_teatro" required class="form-control input-lg">
                @foreach (var teatro in Model.ListaTeatro!)
                {
                    <option value="@teatro._id">@teatro.nombre</option>
                }

            </select>

        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="number" required class="form-control input-lg" asp-for="precioAsiento" placeholder="precioAsiento">
        </div>
           
        <input asp-for="_id" type="hidden"/>

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Editar</button>


        </div>
    </div>
</form>