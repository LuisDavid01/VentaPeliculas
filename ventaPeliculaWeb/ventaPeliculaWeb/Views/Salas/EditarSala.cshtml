@model SalasModelDto

<form asp-controller="Salas" asp-action="EditarSala">
    <div class="row">

        <h2 class="text-center">editar sala</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>

        <div class="form-group col-md-12 mb-4">

            <input type="text" class="form-control  input-lg" asp-for="id_teatro" placeholder="idTeatro" />

        </div>
        <div class="form-group col-md-12 mb-4">

            <input type="text" class="form-control  input-lg" asp-for="id_movie" placeholder="idMovie" />

        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="number" required class="form-control input-lg" asp-for="precioAsiento" placeholder="precioAsiento">
        </div>
            <div class="form-group col-md-12 mb-4">
                <h4>Asientos</h4>
                @if (Model.asientos != null )
                {
                @for (int i = 0; i < Model.asientos.Count; i++)
                {
                    @for (int j = 0; j < Model.asientos[i].Count; j++)
                    {
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model.asientos[i][j].numAsiento" />
                            <input asp-for="@Model.asientos[i][j].ocupado" type="checkbox" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.asientos[i][j].ocupado">@Model.asientos[i][j].numAsiento</label>
                        </div>
                    }
                }
                }
                else
                {
                    <p>No hay asientos disponibles.</p>
                }
            </div>
        <input asp-for="_id" type="hidden"/>

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>