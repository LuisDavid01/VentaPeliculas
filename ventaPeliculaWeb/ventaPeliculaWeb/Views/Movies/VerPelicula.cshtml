@model MoviesModel
<form asp-controller="Movies" asp-action="EditarPelicula">
    <div class="row">

        <h2 class="text-center">Ver pelicula</h2>
        <div class="form-group col-md-12 mb-4">
            <label for="cartelera">Cartelera</label>
            <img src="@Model.cartelera" alt="Cartelera de la película" class="img-fluid" />
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="titulo" placeholder="titulo">
        </div>
        <div class="form-group col-md-12 mb-4">
            <textarea class="form-control  input-lg" asp-for="sinopsis" placeholder="sinopsis">
            </textarea>
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="number" required class="form-control input-lg" asp-for="duracion" placeholder="duracion">
        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="productora" placeholder="Productora">
        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="cartelera" placeholder="cartelera">
        </div>
        <input type="hidden" asp-for="_id" />

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">editar</button>


        </div>
    </div>
</form>
