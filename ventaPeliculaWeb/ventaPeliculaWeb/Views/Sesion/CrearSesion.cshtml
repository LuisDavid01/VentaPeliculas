@model SesionModelDto

<form asp-controller="Sesion" asp-action="CrearSesion">
    <div class="row">

        <h2 class="text-center">crear Pelicula</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="datetime-local" required class="form-control input-lg" asp-for="fechaInicio" placeholder="fecha inicio">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="datetime-local" required class="form-control input-lg" asp-for="fechaFinalizacion" placeholder="fecha final">
        </div>
        <div class="form-group col-md-12 mb-4">

            <input type="text" class="form-control  input-lg" asp-for="id_sala" placeholder="idsala" />

        </div>

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
