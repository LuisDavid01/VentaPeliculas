@model TeatroModel

<form asp-controller="Teatro" asp-action="EditarTeatro">
    <div class="row">

        <h2 class="text-center">editar Teatro</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>

        </div>
        <div class="form-group col-md-12 mb-4">
            <h4>Salas</h4>
            @if (Model.id_salas != null && Model.id_salas.Any())
            {
                @for (int i = 0; i < Model.id_salas.Count; i++)
                {
                    @Model.id_salas[i].nombre
                <a class="btn btn-success " asp-area="" asp-controller="Salas" asp-route-id="@Model.id_salas[i]._id" asp-action="EditarSala"> Editar sala</a>
                }
            }
            else
            {
                <p>No hay asientos disponibles.</p>
            }
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="ubicacion" placeholder="ubicacion">
        </div>
        <input asp-for="_id" type="hidden" />

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>