@model TeatroModelDto

<form asp-controller="Teatro" asp-action="CrearTeatro">
    <div class="row">

        <h2 class="text-center">crear Teatro</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre">
        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="ubicacion" placeholder="precioAsiento">
        </div>

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
