@model UsuariosModel

<form asp-controller="Auth" asp-action="login" id="registerForm">
    <div class="row">
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-warning text-center">
                @TempData["Mensaje"]
            </div>
        }
        <h2 class="text-center">Iniciar sesion</h2>


        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="username" placeholder="username" autocomplete="on">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="password" placeholder="password" autocomplete="new-password">
        </div>
        <div class="h-captcha" data-sitekey="10000000-ffff-ffff-ffff-000000000001" data-size="invisible" data-callback="onHCaptchaSubmit"></div>
        <input type="hidden" id="HCaptchaToken" name="HCaptchaToken" asp-for="HCaptchaToken" />



        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4" id="submitButton">Registrarse</button>


        </div>
    </div>
</form>
<script src="https://js.hcaptcha.com/1/api.js" async defer></script>
<script>
     // Callback function for hCaptcha
     function onHCaptchaSubmit(token) {
         document.getElementById("HCaptchaToken").value = token;
         document.getElementById("registerForm").submit(); 
     }
      document.getElementById("submitButton").addEventListener("click", function(event) {
        event.preventDefault(); 
        hcaptcha.execute(); 
    });
</script>