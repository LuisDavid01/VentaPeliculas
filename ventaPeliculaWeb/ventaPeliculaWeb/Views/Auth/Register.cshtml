@model UsuariosModel

<form asp-controller="Auth" asp-action="Register">
    <div class="row">

        <h2 class="text-center">Registrarse</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre" autocomplete="on">
        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="username" placeholder="username" autocomplete="on">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="email" placeholder="email" autocomplete="on">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="password" placeholder="password" autocomplete="on">
        </div>

        

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Registrarse</button>


        </div>
    </div>
</form>
