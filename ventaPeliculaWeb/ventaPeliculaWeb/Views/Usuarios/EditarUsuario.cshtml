@model UsuariosModel

<form asp-controller="Usuarios" asp-action="EditarUsuario">
    <div class="row">

        <h2 class="text-center">editar Usuarios</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="nombre" placeholder="nombre completo">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="username" placeholder="nombre de usuario">
        </div>
         <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="email" placeholder="correo electronico">
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="rol" placeholder="rol">
        </div>
        <input asp-for="_id" type="hidden" />
        <input asp-for="password" type="hidden" />
        <input asp-for="createdAt" type="hidden" />

        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
