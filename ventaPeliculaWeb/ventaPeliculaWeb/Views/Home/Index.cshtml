@model List<MoviesModel>
@{
    ViewData["Title"] = "Pagina principal";
}
<style>

    .carousel-item img {
    height: 500px;
    object-fit: cover;
    }

    .movie-card {
    transition: transform 0.3s ease;
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .movie-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }

    .movie-poster {
    height: 400px;
    object-fit: cover;
    }

    .btn-horarios {
    background-color: #e50914;
    border-color: #e50914;
    color: white;
    }

    .btn-horarios:hover {
    background-color: #b8070f;
    border-color: #b8070f;
    color: white;
    }

    .section-title {
    color: #333;
    font-weight: bold;
    margin-bottom: 2rem;
    }

    .hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    }
</style>
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 mb-4">Bienvenido a CineFlex</h1>
        <p class="lead">Tu tiquetera de confianza para los mejores cines de la ciudad</p>
    </div>
</section>

<!-- Carrusel -->
<section class="py-0">
    <div id="movieCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#movieCarousel" data-bs-slide-to="2"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.pexels.com/photos/109669/pexels-photo-109669.jpeg" height="500" width="1200" class="d-block w-100" alt="Película Destacada 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Estreno de la Semana</h5>
                    <p>No te pierdas la película más esperada del año</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/109669/pexels-photo-109669.jpeg" class="d-block w-100" height="500" width="1200"  alt="Película Destacada 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Acción y Aventura</h5>
                    <p>Vive la experiencia cinematográfica más intensa</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.pexels.com/photos/109669/pexels-photo-109669.jpeg" class="d-block w-100" height="500" width="1200" alt="Película Destacada 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Para Toda la Familia</h5>
                    <p>Diversión garantizada para grandes y pequeños</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>


<section id="cartelera" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center section-title">
            <i class="fas fa-calendar-week me-2"></i>Cartelera Semanal
        </h2>




        <div class="row g-4">
            @if (Model.Any())
            {
                @foreach (var movie in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card movie-card h-100">
                        <img src="@movie.cartelera" class="card-img-top movie-poster" width="300" height="400" alt="imagen">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@movie.titulo</h5>
                                <p class="card-text flex-grow-1">
                                    <small class="text-muted">Categoria • @movie.duracion</small><br>
                                    @movie.sinopsis
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-horarios btn-sm">
                                        <i class="fas fa-clock me-1"></i>Ver Horarios
                                    </button>
                                </div>
                            </div>
                    </div>
                </div>
                }
            }
            else
            {
                <section>
                    <p class="display-2">No hay peliculas disponibles esta semana</p>
                </section>
            }
        </div>

    </div>
</section>




