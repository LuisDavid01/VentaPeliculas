@model PromocionesModel

<form asp-controller="Promociones" asp-action="CrearPromocion" method="post" >
    <div class="row">

        <h2 class="text-center">crear Promocion</h2>

        <div class="form-group col-md-12 mb-4">
            <input type="text" required class="form-control input-lg" asp-for="code" placeholder="codigo de promocion">
        </div>
        <div class="form-group col-md-12 mb-4">

            <textarea class="form-control  input-lg" asp-for="descripcion" placeholder="descripcion">
            </textarea>
        </div>
        <div class="form-group col-md-12 mb-4">
            <input type="number" required class="form-control input-lg" asp-for="discountPercentage" placeholder="descuento aplicado">
        </div>

        <div class="form-group col-md-12 mb-4">
            <input type="datetime-local" required class="form-control input-lg" asp-for="expirationDate" placeholder="Fecha de expiracion">
        </div>


        <div class="col-md-12">

            <button type="submit" class="btn btn-primary btn-pill mb-4">Crear</button>


        </div>
    </div>
</form>
